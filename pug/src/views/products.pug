doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Productos
        style.
            table{
                border: 1px solid black;
                border-collapse: collapse
            }
            th{
                border: 1px solid black
            }
            td{
                border: 1px solid black
            }
    body
        button(id="productButton", type ='button', onclick="location.href='/'") Cargar producto
        p 
        table 
            caption Productos
            tr 
                th Nombre 
                th Precio 
                th Imagen
                if products.length
                each product in products
                    tr
                        td=product.name
                        td=product.price
                        td(scope='row')
                            img(src=product.thumbnail, alt='', width='50px')
                else 
                    tr
                        td(colspan='3') No hay productos