extends main.pug 

block datos 
  button(id="productButton", type ='button', onclick="location.href='/productos'") Ver productos
  h1="Carga de producto"
  form(action= "/productos", method= "post")
    <input type="text" name="name" placeholder="Nombre" required><br>
    <input type="number" name="price" placeholder="Precio" required><br>
    <input type="text" name="thumbnail" placeholder="Url Imagen" required><br>
    <input type="submit" value="Cargar producto" />
